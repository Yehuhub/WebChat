<%- include('head_template.ejs') %>
  <body>

    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="border border-2 rounded">

          <div class="row bg-primary rounded p-2 d-flex align-items-center">
            <h1 class="col text-light m-0">Chat Room</h1>
            <div class="col-auto gap-2 d-flex align-items-center">
              <form class="d-flex" id="searchForm">
                <div class="input-group">
                  <input id="searchString" class="form-control" type="text" placeholder="Search..." name="searchInput" id="searchInput">
                  <button type="submit" class="btn btn-success">Go</button>
                  <button type="reset" class="btn btn-danger">X</button>
                </div>
              </form>
          
              <!-- Sign Out Button -->
               <form action="/signout" method="post">
                 <button type="submit" id="signOutButton" class="btn btn-dark">Sign out</button>
               </form>
            </div>
          </div>
          <!-- Chat Box -->
              <div class=" p-3 overflow-y-scroll" style="height: 400px;" id="chatBox">
                  <ul class="list-unstyled m-0" id="messageList">
                    
                  </ul>
              </div>
              
              <input type="hidden" id="userId" name="userId" value="<%= userId %>">
              <!-- Input Form -->
              <div class="m-3">
                  <form id="newMessageForm" class="d-flex">
                      <input type="text" id="messageInput" class="form-control me-2" placeholder="Type your message..." required>
                      <button type="submit" class="btn btn-primary">Send</button>
                  </form>
              </div>
          </div>
      </div>
  </div>

  <div
      id="toastContainer"
      class="toast-container position-fixed bottom-0 end-0 p-3"
    >
      <div
        id="notificationToast"
        class="toast"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div id="toastMessage" class="toast-body bg-danger"></div>
      </div>
    </div>
    
  <script src="/javascripts/chatpage.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
