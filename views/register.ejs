<%- include('head_template.ejs') %>
  <body>
    <div class="cointainer-fluid">
      <h1 class="d-flex justify-content-center align-items-center">
        <%= title %>
      </h1>
      <div class="d-flex justify-content-center align-items-center">
        <div class="col-3">
          <form action="/registration" method="post">
            <div class="mb-2">
              <input
                type="email"
                id="emailInput"
                name="email"
                class="form-control"
                value="<%= fields.email ? fields.email : '' %>"
                required
              />
              <label class="form-label" for="form2Example1">Email address</label>
            </div>
  
            <div class="mb-2">
              <input
                type="input"
                id="firstNameInput"
                name="firstName"
                class="form-control"
                pattern="^[a-zA-Z]{3,}$"
                title="Name must be at least 3 letters long and contain only letters."
                value="<%= fields.firstName ? fields.firstName : '' %>"
                required
              />
              <label class="form-label" for="form2Example1">First name</label>
            </div>
  
            <div class="mb-2">
              <input
                type="input"
                id="lastNameInput"
                name="lastName"
                class="form-control"
                pattern="^[a-zA-Z]{3,}$"
                title="Last name must be at least 3 letters long and contain only letters."
                value="<%= fields.lastName ? fields.lastName : '' %>"
                required
              />
              <label class="form-label" for="form2Example1">Last name</label>
            </div>
            <% if (errorMessage) { %>
            <div class="alert alert-danger "><%= errorMessage %></div>
            <% } %>
  
  
            <div class="d-flex justify-content-center align-items-center">
              <button type="submit" class="btn btn-primary btn-block mb-1">
                Continue registration
              </button>
            </div>
          </form>

        </div>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <form action="/" method="get">
          <button type="submit" class="btn btn-secondary btn-block mb-4">
            Back
          </button>
        </form>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
